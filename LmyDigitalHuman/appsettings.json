{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/LmyDigitalHuman-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Ollama": {
    "BaseUrl": "http://localhost:11434",
    "Model": "qwen2.5vl:7b",
    "Temperature": 0.7,
    "MaxTokens": 2048,
    "SystemPrompt": "你是一个专业的AI助手，请用中文回答问题。回答要准确、简洁、有帮助。",
    "Timeout": 120,
    "MaxRetries": 3,
    "Stream": true
  },
  "MuseTalk": {
    "PythonPath": "",
    "ScriptPath": "",
    "ModelPath": "",
    "OutputPath": "",
    "BatchSize": 4,
    "EnableGpuOptimization": true,
    "MaxConcurrentRequests": 3,
    "RequestTimeout": 300
  },
  "PersistentMuseTalk": {
    "Host": "127.0.0.1",
    "Port": 58080,
    "ConnectionTimeout": 5000,
    "ResponseTimeout": 60000,
    "EnablePersistentMode": true,
    "AutoStartService": true,
    "ServiceStartupDelay": 2000,
    "MaxRetries": 3,
    "PingInterval": 60000
  },
  "RealtimeDigitalHuman": {
    "WhisperNet": {
      "ModelSize": "Large",
      "ModelPath": "Models/ggml-large-v3.bin"
    },
    "Whisper": {
      "PythonPath": "python",
      "Model": "base",
      "Language": "zh",
      "UseGPU": true
    }
  },
  "DigitalHuman": {
    "MuseTalk": {
      "PythonPath": "venv_musetalk/Scripts/python.exe",
      "ScriptPath": "musetalk_service_complete.py",
      "TimeoutMinutes": 30,
      "MaxRetries": 3
    },
    "EdgeTTS": {
      "PythonPath": "venv_musetalk/Scripts/python.exe",
      "OutputPath": "temp",
      "DefaultVoice": "zh-CN-XiaoxiaoNeural",
      "TimeoutSeconds": 30,
      "AutoInstallPackages": false
    },
    "MaxConcurrentConversations": 200,
    "MaxRealtimeConversations": 50,
    "MaxAudioProcessing": 20,
    "MaxTTSProcessing": 15,
    "MaxVideoGeneration": 10,
    "CacheExpirationHours": 4,
    "EnablePerformanceOptimization": true,
    "EnableBatchProcessing": true,
    "DefaultResponseMode": "fast",
    "DefaultQuality": "medium",
    "AudioProcessing": {
      "SampleRate": 16000,
      "Channels": 1,
      "BitDepth": 16,
      "EnableNoiseCancellation": true,
      "EnableAudioEnhancement": true,
      "MaxConcurrentJobs": 20
    },
    "Templates": {
      "PreloadCommonTemplates": true,
      "MaxCachedTemplates": 100,
      "EnableTemplateOptimization": true,
      "PreloadOnStartup": true
    },
    "MessageQueue": {
      "Type": "InMemory",
      "MaxQueueSize": 5000,
      "ProcessorCount": 8,
      "EnablePriorityQueue": true
    },
    "Performance": {
      "EnableResourceMonitoring": true,
      "MaxMemoryUsageMB": 4096,
      "GCCollectionInterval": 300000,
      "EnableMetrics": true
    }
  },
  "UltraFastSettings": {
    "EnableUltraFastMode": true,
    "DefaultBatchSize": 16,
    "MaxParallelInferences": 4,
    "EnablePerformanceMonitoring": true,
    "TargetResponseTimeMs": 3000,
    "EnableGPUOptimization": true,
    "EnableModelCompilation": true,
    "EnableShadowFix": true
  }
}