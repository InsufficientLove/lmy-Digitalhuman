{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http1AndHttp2"
    },
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5001"
      },
      "Https": {
        "Url": "https://localhost:7001"
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/LmyDigitalHuman-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Ollama": {
    "BaseUrl": "http://localhost:11434",
    "Model": "qwen2.5:14b-instruct-q4_0",
    "Temperature": 0.7,
    "MaxTokens": 2048,
    "SystemPrompt": "你是一个专业的AI助手，请用中文回答问题。回答要准确、简洁、有帮助。",
    "Timeout": 30,
    "MaxRetries": 3,
    "Stream": true
  },
  "MuseTalk": {
    "Path": "MuseTalk",
    "VenvPath": "venv_musetalk",
    "Commercial": {
      "UseFloat16": false,
      "BatchSize": 4,
      "NumInferenceSteps": 25,
      "Resolution": 512,
      "Fps": 25,
      "GPUDevices": "0,1,2,3"
    },
    "Realtime": {
      "UseFloat16": true,
      "BatchSize": 2,
      "NumInferenceSteps": 15,
      "Resolution": 256,
      "Fps": 25,
      "TargetLatency": 500
    }
  },
  "RealtimeDigitalHuman": {
    "WhisperNet": {
      "ModelSize": "Large",
      "ModelPath": "Models/ggml-large-v3.bin"
    },
    "Whisper": {
      "PythonPath": "python",
      "Model": "base",
      "Language": "zh",
      "UseGPU": true
    }
  },
  "DigitalHuman": {
    "MuseTalk": {
      "PythonPath": "python",
      "ScriptPath": "musetalk_service_complete.py",
      "TimeoutMinutes": 15,
      "MaxRetries": 3
    },
    "MaxConcurrentConversations": 200,
    "MaxRealtimeConversations": 50,
    "MaxAudioProcessing": 20,
    "MaxTTSProcessing": 15,
    "MaxVideoGeneration": 10,
    "CacheExpirationHours": 4,
    "EnablePerformanceOptimization": true,
    "EnableBatchProcessing": true,
    "DefaultResponseMode": "fast",
    "DefaultQuality": "medium",
    "AudioProcessing": {
      "SampleRate": 16000,
      "Channels": 1,
      "BitDepth": 16,
      "EnableNoiseCancellation": true,
      "EnableAudioEnhancement": true,
      "MaxConcurrentJobs": 20
    },
    "Templates": {
      "PreloadCommonTemplates": true,
      "MaxCachedTemplates": 100,
      "EnableTemplateOptimization": true,
      "PreloadOnStartup": true
    },
    "MessageQueue": {
      "Type": "InMemory",
      "MaxQueueSize": 5000,
      "ProcessorCount": 8,
      "EnablePriorityQueue": true
    },
    "Performance": {
      "EnableResourceMonitoring": true,
      "MaxMemoryUsageMB": 4096,
      "GCCollectionInterval": 300000,
      "EnableMetrics": true
    }
  }
}
